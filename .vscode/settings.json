{
    "editor.renderWhitespace": "all",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.tabSize": 4,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.ruff_cache": true
    },
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        }
    },
    "python.defaultInterpreterPath": "${workspaceFolder}/app/.venv/bin/python",
    "python.languageServer": "None",
    "ruff.path": [
        "${workspaceFolder}/app/.venv/bin/ruff"
    ],
    "ruff.configuration": "${workspaceFolder}/app/ruff.toml",
    "ty.path": [
        "${workspaceFolder}/app/.venv/bin/ty"
    ],
    "ty.configurationFile": "${workspaceFolder}/app/ty.toml",
    "pythonTestExplorer.testFramework": "pytest",
    "cSpell.words": [
        "AUTOCOMPACT",
        "autopep",
        "bytebase",
        "catppuccin",
        "charliermarsh",
        "claudeignore",
        "codezombiech",
        "dbhub",
        "debugpy",
        "dont",
        "eamodio",
        "elif",
        "else",
        "fdisk",
        "frontmatter",
        "fullwidth",
        "isort",
        "Keifu",
        "keymap",
        "mhutchie",
        "mixedspaceshere",
        "mktemp",
        "modelcontextprotocol",
        "netcat",
        "netrc",
        "njpwerner",
        "nvim",
        "oneline",
        "osascript",
        "packpath",
        "pipefail",
        "pycodestyle",
        "pyflakes",
        "pynvim",
        "pypirc",
        "pyproject",
        "pytest",
        "pyupgrade",
        "runtimepath",
        "shellautocompletion",
        "shellcheck",
        "shfmt",
        "statusline",
        "tamasfe",
        "trixie",
        "tyriar",
        "vimrc",
        "wayou",
        "yazi",
        "yzhang"
    ],
    "[json]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace",
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace",
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one",
        "editor.unicodeHighlight.ambiguousCharacters": false,
        "editor.unicodeHighlight.invisibleCharacters": false,
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "cSpell.fixSpellingWithRenameProvider": true,
        "cSpell.advanced.feature.useReferenceProviderWithRename": true,
        "cSpell.advanced.feature.useReferenceProviderRemove": "/^#+\\s/"
    }
}